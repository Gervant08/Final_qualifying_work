<?xml version="1.0" encoding="utf-8"?>
<navigation
    android:id="@+id/android_navigation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    app:startDestination="@layout/activity_main">

    <fragment
        android:id="@+id/auth_fragment"
        android:name="com.gervant08.finalqualifyingwork.ui.authentication.AuthFragment"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_auth_fragment_to_main_fragment"
            app:destination="@id/main_fragment" />

    </fragment>

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.gervant08.finalqualifyingwork.ui.main.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_basket_fragment"
            app:destination="@id/basket_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
    </fragment>

    <fragment
        android:id = "@+id/home_fragment"
        android:name = "com.gervant08.finalqualifyingwork.ui.main.home.HomeFragment"
        tools:layout = "@layout/fragment_home">


        <action
            android:id="@+id/action_home_fragment_to_basket_fragment2"
            app:destination="@id/basket_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_profile_fragment"
            app:destination="@id/profile_fragment" />
    </fragment>

    <fragment
        android:id = "@+id/basket_fragment"
        android:name = "com.gervant08.finalqualifyingwork.ui.main.basket.BasketFragment"
        tools:layout = "@layout/fragment_basket">


        <action
            android:id="@+id/action_basket_fragment_to_profile_fragment2"
            app:destination="@id/profile_fragment" />
        <action
            android:id="@+id/action_basket_fragment_to_home_fragment2"
            app:destination="@id/home_fragment" />
    </fragment>

    <fragment
        android:id = "@+id/profile_fragment"
        android:name = "com.gervant08.finalqualifyingwork.ui.main.profile.ProfileFragment"
        tools:layout = "@layout/fragment_profile">


        <action
            android:id="@+id/action_profile_fragment_to_basket_fragment2"
            app:destination="@id/basket_fragment" />
        <action
            android:id="@+id/action_profile_fragment_to_home_fragment2"
            app:destination="@id/home_fragment" />
    </fragment>

</navigation>