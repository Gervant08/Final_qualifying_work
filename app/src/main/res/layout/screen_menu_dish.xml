<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <ImageView
        android:id="@+id/image_dish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:scaleType="fitStart"
        tools:src='@drawable/image_item_meat_plate' />

    <TextView
        android:id="@+id/text_menu_dish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="295dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/chocolate"
        android:gravity="start"
        android:textSize="24sp"

        tools:text="Мясная закуска" />

    <TextView
        android:id="@+id/text_menu_pos_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="330dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="start"
        android:textSize="18sp"

        tools:text="Цена: 350 руб. Вес: 150/80 гр.\n\n\nСостав: Колбаса с/к и с/в, карбонад в/к, говядина в/к, карпаччо из курицы.  " />

    <Button
        android:id="@+id/menu_button_dish"
        android:layout_width="286dp"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_selector"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Добавить в корзину"
        android:textColor="@color/chocolate"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>